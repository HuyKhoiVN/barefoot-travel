                    return {
                        isValid: false,
                        errorMessage: 'Cannot update status for cancelled or completed bookings'
                    };
                }

                // If current status is InProgress, can only change to Complete
                if (currentStatusId === BOOKING_STATUS.IN_PROGRESS) {
                    if (newStatusId !== BOOKING_STATUS.COMPLETE) {
                        return {
                            isValid: false,
                            errorMessage: 'In-progress bookings can only be marked as Complete'
                        };
                    }
                }

                // Cannot change to Cancel or Complete from Pending or Confirmed (business rule)
                if (newStatusId === BOOKING_STATUS.CANCEL || newStatusId === BOOKING_STATUS.COMPLETE) {
                    if (currentStatusId === BOOKING_STATUS.PENDING || currentStatusId === BOOKING_STATUS.CONFIRMED) {
                        return {
                            isValid: false,
                            errorMessage: 'Cannot directly change to Cancel or Complete from Pending or Confirmed status'
                        };
                    }
                }

                return { isValid: true, errorMessage: '' };
            }

