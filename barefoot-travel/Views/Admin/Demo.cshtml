@{
    ViewData["Title"] = "Demo Page";
    Layout = "~/Views/Admin/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Admin Layout Demo</h4>
                <p class="card-subtitle">This page demonstrates the admin layout functionality.</p>
                
                <div class="row mt-4">
                    <div class="col-md-4">
                        <div class="card bg-primary text-white">
                            <div class="card-body">
                                <h5 class="card-title">Tours</h5>
                                <p class="card-text">Manage tour packages and itineraries</p>
                                <a href="#" class="btn btn-light">View Tours</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-success text-white">
                            <div class="card-body">
                                <h5 class="card-title">Bookings</h5>
                                <p class="card-text">Track and manage customer bookings</p>
                                <a href="#" class="btn btn-light">View Bookings</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-warning text-white">
                            <div class="card-body">
                                <h5 class="card-title">Users</h5>
                                <p class="card-text">Manage user accounts and permissions</p>
                                <a href="#" class="btn btn-light">View Users</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-12">
                        <div class="alert alert-info">
                            <h5 class="alert-heading">Layout Features</h5>
                            <ul class="mb-0">
                                <li>Responsive sidebar navigation</li>
                                <li>Modern Bootstrap 5 design</li>
                                <li>Tabler icons integration</li>
                                <li>Chart.js and ApexCharts support</li>
                                <li>Mobile-friendly responsive design</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
